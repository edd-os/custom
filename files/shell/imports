if [ -d ${XDG_CONFIG_HOME:-$HOME/.config}/shell/aliases ]; then for f in ${XDG_CONFIG_HOME:-$HOME/.config}/shell/aliases/*; do source $f; done; fi
if [ -d ${XDG_CONFIG_HOME:-$HOME/.config}/shell/environment ]; then for f in ${XDG_CONFIG_HOME:-$HOME/.config}/shell/environment/*; do source $f; done; fi
if [ -d ${XDG_CONFIG_HOME:-$HOME/.config}/shell/path ]; then for f in ${XDG_CONFIG_HOME:-$HOME/.config}/shell/path/*; do source $f; done; fi
